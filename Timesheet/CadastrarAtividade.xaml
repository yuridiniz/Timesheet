<Window x:Class="Timesheet.CadastrarAtividade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Atividades" Height="189" Width="462" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="txtAtividade" Grid.Row="0" HorizontalAlignment="Left" Height="101" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="434"/>

        <StackPanel HorizontalAlignment="Right" Height="30" Margin="124,0,0,-76" Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Top" Width="200">
            <Button Name="btnOk" Content="Ok" HorizontalAlignment="Right"  VerticalAlignment="Top"  Margin="25,5,5,5" Width="75"/>
            <Button Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Right"  VerticalAlignment="Top" Margin="10,5,5,5" Width="75"/>
        </StackPanel>

    </Grid>
</Window>
